{
  "name": "brad-os",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run advanced:emulators",
    "build": "npm run build -w @brad-os/functions",
    "lint": "oxlint packages/functions/src scripts/lint-*.ts --config .oxlintrc.json",
    "lint:fix": "oxlint packages/functions/src scripts/lint-*.ts --config .oxlintrc.json --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --config vitest.coverage.config.ts",
    "deploy:functions": "npm run build && firebase deploy --only functions",
    "deploy:functions:dev": "npm run build && firebase deploy --only functions:devHealth,functions:devExercises,functions:devPlans,functions:devMesocycles,functions:devWorkouts,functions:devWorkoutSets,functions:devStretchSessions,functions:devMeditationSessions,functions:devCalendar,functions:devBarcodes",
    "deploy:functions:prod": "npm run build && firebase deploy --only functions:prodHealth,functions:prodExercises,functions:prodPlans,functions:prodMesocycles,functions:prodWorkouts,functions:prodWorkoutSets,functions:prodStretchSessions,functions:prodMeditationSessions,functions:prodCalendar,functions:prodBarcodes",
    "deploy:hosting": "firebase deploy --only hosting",
    "advanced:emulators": "npm run build && firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "advanced:emulators:fresh": "npm run build && firebase emulators:start",
    "advanced:emulators:seed": "npm run build && firebase emulators:start --import=./seed-data",
    "emulators": "npm run advanced:emulators",
    "emulators:fresh": "npm run advanced:emulators:fresh",
    "emulators:seed": "npm run advanced:emulators:seed",
    "test:integration": "vitest run --config vitest.integration.config.ts --no-file-parallelism",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --no-file-parallelism",
    "test:integration:emulator": "bash scripts/run-integration-tests.sh",
    "seed:generate": "npx tsx scripts/generate-seed-data.ts",
    "validate": "bash scripts/validate.sh",
    "validate:quick": "bash scripts/validate.sh --quick",
    "doctor": "bash scripts/doctor.sh",
    "lint:architecture": "tsx scripts/lint-architecture.ts",
    "generate:rewrites": "tsx scripts/generate-firebase-rewrites.ts",
    "update:quality-grades": "tsx scripts/update-quality-grades.ts",
    "advanced:otel:start": "OTEL_DIR=${OTEL_OUTPUT_DIR:-.otel}; mkdir -p \"$OTEL_DIR\"; nohup npx tsx scripts/otel-collector/index.ts > \"$OTEL_DIR/collector.log\" 2>&1 &",
    "advanced:otel:stop": "PORT=${OTEL_COLLECTOR_PORT:-4318}; lsof -ti:$PORT | xargs kill 2>/dev/null || true",
    "advanced:otel:clean": "OTEL_DIR=${OTEL_OUTPUT_DIR:-.otel}; rm -rf \"$OTEL_DIR/\"",
    "otel:start": "npm run advanced:otel:start",
    "otel:stop": "npm run advanced:otel:stop",
    "otel:clean": "npm run advanced:otel:clean",
    "qa": "npm run qa:start --",
    "qa:start": "bash scripts/qa-sweep.sh",
    "advanced:qa:env:start": "bash scripts/qa-start.sh",
    "qa:env:start": "npm run advanced:qa:env:start --",
    "qa:stop": "bash scripts/qa-stop.sh",
    "advanced:qa:env:stop": "bash scripts/qa-stop.sh",
    "qa:env:stop": "npm run advanced:qa:env:stop --",
    "qa:build": "bash scripts/qa-build.sh",
    "qa:launch": "bash scripts/qa-launch.sh",
    "qa:sweep": "bash scripts/qa-sweep.sh",
    "ralph:improve-harness": "tsx scripts/ralph/index.ts",
    "ralph:sync-backlog": "tsx scripts/ralph/sync-backlog.ts",
    "preinstall": "node scripts/check-node-version.js",
    "postinstall": "git config core.hooksPath hooks",
    "lint:oxlint": "oxlint packages/functions/src scripts/lint-*.ts --config .oxlintrc.json",
    "lint:oxlint:fix": "oxlint packages/functions/src scripts/lint-*.ts --config .oxlintrc.json --fix",
    "lint:oxlint:type-aware": "oxlint packages/functions/src --config .oxlintrc.json --type-aware && oxlint scripts/lint-*.ts --config .oxlintrc.json --type-aware"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.52",
    "@oxlint/migrate": "^1.50.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.6.1",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "prettier": "^3.2.5",
    "supertest": "^7.2.2",
    "tree-sitter-wasms": "^0.1.12",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0",
    "web-tree-sitter": "^0.25.3"
  }
}
