{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(jq -r '.tool_input.file_path // empty') && { [[ -z \"$FILE\" || ! \"$FILE\" =~ \\.(ts|tsx|js|jsx)$ ]] || npx eslint --fix \"$FILE\"; }"
          }
        ]
      }
    ]
  }
}
